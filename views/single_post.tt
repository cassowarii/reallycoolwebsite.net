        <div id="container">
            <% INCLUDE component/nav.tt %>
        </div>
        <div style="link-list">
            <% INCLUDE component/link_capsule.tt %>

            <% IF link.username == user.name %>
                <!-- Only show hearts for our own entries -->
                <% IF link.nhearts > 0 %>
                    <a id="hearts"></a>
                    <div class="link">
                        &#9829;
                        <% FOREACH liker IN link.likers %>
                            <a href="/~<% liker | url %>">~<% liker | html_entity %></a>
                        <% END %>
                    </div>
                <% END %>
            <% END %>
        </div>
        <div id="list-footer">
            <% IF next_id OR prev_id %>
                <div id="prev-next-post">
                <% IF next_id %>
                    <div class="next">
                        <a href="<% base_list_url %>/entry/<% next_id %>">
                            <div class="arrow">&larr;</div>
                            <div class="title">
                                <% next_title %>
                            </div>
                        </a>
                    </div>
                <% END %>
                <% IF prev_id %>
                    <div class="prev">
                        <a href="<% base_list_url %>/entry/<% prev_id %>">
                            <div class="title">
                                <% prev_title %>
                            </div>
                            <div class="arrow">&rarr;</div>
                        </a>
                    </div>
                <% ELSE %>
                    <div class="prev">The end.</div>
                <% END %>
                <div style="clear: both"></div>
                <hr>
            <% END %>
            <div style="text-align: center"><a href="/~<% profile.name %>/random">Random entry</a></div>
            <hr>
            <div style="text-align: center"><a href="/~<% profile.name %>"><% profile.name %>'s <% profile.page_name %></a></div>
        </div>
    </div>

    <% INCLUDE component/comment_listing.tt %>
